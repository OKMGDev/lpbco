{%- comment -%}
  Renders the Wholesale Enquiries tab panel

  Accepts:
  - section_id: {String} Section ID for unique form identifiers

  Usage:
  {% render 'contact-tab-wholesale', section_id: section.id %}
{%- endcomment -%}

<div class="contact__tab-panel" id="tab-wholesale">
  <h2 class="contact__tab-heading">Wholesale Enquiries</h2>
  <div class="contact__tab-textbox">
    <p>Interested in wholesale? Let us know and we'll get back to you.</p>
  </div>
  {%- form 'contact', id: 'ContactForm-Wholesale', class: 'contact__form' -%}
    {%- if form.posted_successfully? -%}
      <div class="contact__form-message success">
        <h2>Thank you! Your message has been sent.</h2>
      </div>
    {%- elsif form.errors -%}
      <div class="contact__form-message error">
        <h2>Please correct the following errors:</h2>
        <ul>
          {%- for field in form.errors -%}
            <li>{{ form.errors[field] }}</li>
          {%- endfor -%}
        </ul>
      </div>
    {%- endif -%}
    <div class="contact__form-fields">
      <div class="contact__form-row">
        <div class="contact__form-field">
          <label for="ContactForm-firstname-wholesale">First Name</label>
          <input
            type="text"
            id="ContactForm-firstname-wholesale"
            name="contact[first_name]"
            value="{% if form.first_name %}{{ form.first_name }}{% elsif customer %}{{ customer.first_name }}{% endif %}"
            required
          >
        </div>
        <div class="contact__form-field">
          <label for="ContactForm-lastname-wholesale">Last Name</label>
          <input
            type="text"
            id="ContactForm-lastname-wholesale"
            name="contact[last_name]"
            value="{% if form.last_name %}{{ form.last_name }}{% elsif customer %}{{ customer.last_name }}{% endif %}"
            required
          >
        </div>
      </div>
      <div class="contact__form-row">
        <div class="contact__form-field">
          <label for="ContactForm-phone-wholesale">Phone Number</label>
          <input
            type="tel"
            id="ContactForm-phone-wholesale"
            name="contact[phone]"
            value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
          >
        </div>
        <div class="contact__form-field">
          <label for="ContactForm-email-wholesale">Email Address <span>*</span></label>
          <input
            type="email"
            id="ContactForm-email-wholesale"
            name="contact[email]"
            value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
            required
          >
        </div>
      </div>
      <div class="contact__form-field">
        <label for="ContactForm-contact-method-wholesale">How would you like to be contacted?</label>
        <select id="ContactForm-contact-method-wholesale" name="contact[contact_method]">
          <option value="">Select an option</option>
          <option value="email">Email</option>
          <option value="phone">Phone</option>
          <option value="either">Either</option>
        </select>
      </div>
      <div class="contact__form-field">
        <label for="ContactForm-message-wholesale">Your message</label>
        <textarea
          id="ContactForm-message-wholesale"
          name="contact[body]"
          rows="6"
          required
        >{{ form.body }}</textarea>
      </div>
      <input type="hidden" name="contact[form_type]" value="Wholesale Enquiry">
      <button type="submit" class="button contact__form-submit">Submit</button>
    </div>
  {%- endform -%}
</div>

