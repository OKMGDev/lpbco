{{ 'component-accordion.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  #shopify-section-{{ section.id }} {
    position: relative;
    overflow: hidden;
  }
{%- endstyle -%}

<div class="faqs-section section-{{ section.id }}-padding" id="FAQs-{{ section.id }}">
  {%- if section.settings.image_top_left != blank -%}
    <div class="faqs__image-top-left">
      {{
        section.settings.image_top_left
        | image_url: width: 600
        | image_tag: loading: 'lazy', alt: section.settings.image_top_left.alt
        | default: 'Image'
      }}
    </div>
  {%- endif -%}

  <div class="page-width">
    <div class="faqs__content">
      {%- for block in section.blocks -%}
        <div class="faqs__accordion accordion" {{ block.shopify_attributes }}>
          <details
            id="Details-{{ block.id }}-{{ section.id }}"
            {% if forloop.first %}
              open
            {% endif %}
          >
            <summary id="Summary-{{ block.id }}-{{ section.id }}" class="faqs__summary">
              <h3 class="faqs__title accordion__title">
                {{ block.settings.title }}
              </h3>
              <span class="faqs__icon faqs__icon--open">
                {{ 'icon-plus.svg' | inline_asset_content }}
              </span>
              <span class="faqs__icon faqs__icon--close">
                {{ 'icon-minus.svg' | inline_asset_content }}
              </span>
            </summary>
            <div
              class="faqs__content-inner accordion__content rte"
              id="CollapsibleAccordion-{{ block.id }}-{{ section.id }}"
              role="region"
              aria-labelledby="Summary-{{ block.id }}-{{ section.id }}"
            >
              {{ block.settings.textbox }}
            </div>
          </details>
        </div>
      {%- endfor -%}
    </div>
  </div>

  {%- if section.settings.image_bottom_right != blank -%}
    <div class="faqs__image-bottom-right">
      {{
        section.settings.image_bottom_right
        | image_url: width: 600
        | image_tag: loading: 'lazy', alt: section.settings.image_bottom_right.alt
        | default: 'Image'
      }}
    </div>
  {%- endif -%}
</div>

{%- if section.blocks.size > 0 -%}
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {%- for block in section.blocks -%}
          {
            "@type": "Question",
            "name": {{ block.settings.title | json }},
            "acceptedAnswer": {
              "@type": "Answer",
              "text": {{ block.settings.textbox | strip_html | json }}
            }
          }{%- unless forloop.last -%},{%- endunless -%}
        {%- endfor -%}
      ]
    }
  </script>
{%- endif -%}

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const faqsSection = document.getElementById('FAQs-{{ section.id }}');
    if (!faqsSection) return;

    const accordions = faqsSection.querySelectorAll('details');

    accordions.forEach(function (details) {
      const summary = details.querySelector('summary');
      const openIcon = summary.querySelector('.faqs__icon--open');
      const closeIcon = summary.querySelector('.faqs__icon--close');

      // Set initial state
      if (details.hasAttribute('open')) {
        openIcon.style.display = 'none';
        closeIcon.style.display = 'block';
        summary.setAttribute('aria-expanded', 'true');
      } else {
        openIcon.style.display = 'block';
        closeIcon.style.display = 'none';
        summary.setAttribute('aria-expanded', 'false');
      }

      // Set ARIA attributes
      summary.setAttribute('role', 'button');
      if (summary.nextElementSibling && summary.nextElementSibling.id) {
        summary.setAttribute('aria-controls', summary.nextElementSibling.id);
      }

      // Toggle functionality
      details.addEventListener('toggle', function () {
        if (details.hasAttribute('open')) {
          openIcon.style.display = 'none';
          closeIcon.style.display = 'block';
          summary.setAttribute('aria-expanded', 'true');
        } else {
          openIcon.style.display = 'block';
          closeIcon.style.display = 'none';
          summary.setAttribute('aria-expanded', 'false');
        }
      });
    });
  });
</script>

{% schema %}
{
  "name": "FAQs",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Images"
    },
    {
      "type": "image_picker",
      "id": "image_top_left",
      "label": "Top left image"
    },
    {
      "type": "image_picker",
      "id": "image_bottom_right",
      "label": "Bottom right image"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "accordion",
      "name": "Accordion",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Question"
        },
        {
          "type": "richtext",
          "id": "textbox",
          "label": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQs",
      "blocks": [
        {
          "type": "accordion",
          "settings": {
            "title": "First Question?",
            "textbox": "<p>This is the answer to your first question.</p>"
          }
        },
        {
          "type": "accordion",
          "settings": {
            "title": "Second Question?",
            "textbox": "<p>This is the answer to your second question.</p>"
          }
        },
        {
          "type": "accordion",
          "settings": {
            "title": "Third Question?",
            "textbox": "<p>This is the answer to your third question.</p>"
          }
        }
      ]
    }
  ]
}
{% endschema %}
