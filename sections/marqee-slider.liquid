<div class="marquee-slider" id="MarqueeSlider-{{ section.id }}">
  <div class="swiper marquee-swiper">
    <div class="swiper-wrapper">
      {%- for i in (1..3) -%}
        {%- for block in section.blocks -%}
          <div
            class="swiper-slide"
            {% if forloop.first and i == 1 %}
              {{- block.shopify_attributes -}}
            {% endif %}
          >
            <div class="marquee-slide">
              {%- if block.settings.icon != blank -%}
                <div class="marquee-icon">
                  {{
                    block.settings.icon
                    | image_url: width: 50
                    | image_tag: loading: 'lazy', alt: block.settings.icon.alt
                    | default: 'Icon'
                  }}
                </div>
              {%- endif -%}
              {%- if block.settings.text != blank -%}
                <div class="marquee-text">
                  {{ block.settings.text }}
                </div>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      {%- endfor -%}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const marqueeSwiper = new Swiper('#MarqueeSlider-{{ section.id }} .marquee-swiper', {
      slidesPerView: 'auto',
      spaceBetween: 40,
      loop: true,
      loopedSlides: {{ section.blocks.size }},
      autoplay: {
        delay: 0,
        disableOnInteraction: false,
      },
      speed: 5000,
      allowTouchMove: false,
      freeMode: true,
      freeModeMomentum: false,
      breakpoints: {
        1024: {
          spaceBetween: 20,
        },
      },
      100: {
        spaceBetween: 20,
      },
    });
  });
</script>

{% schema %}
{
  "name": "Marquee Slider",
  "tag": "section",
  "class": "section",
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Slide text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Marquee Slider",
      "blocks": [
        {
          "type": "slide",
          "settings": {
            "text": "Slide 1"
          }
        },
        {
          "type": "slide",
          "settings": {
            "text": "Slide 2"
          }
        },
        {
          "type": "slide",
          "settings": {
            "text": "Slide 3"
          }
        }
      ]
    }
  ]
}
{% endschema %}
