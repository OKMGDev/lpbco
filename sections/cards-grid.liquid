{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="cards-grid-section section-{{ section.id }}-padding" id="CardsGrid-{{ section.id }}">
  <div class="page-width">
    <div class="cards-grid__container">
      {%- for block in section.blocks -%}
        <div class="cards-grid__card" {{ block.shopify_attributes }}>
          {%- if block.settings.bg_icon != blank -%}
            {{
              block.settings.bg_icon
              | image_url: width: 240
              | image_tag: loading: 'lazy', alt: block.settings.bg_icon.alt, class: 'cards-grid__card-bg-icon'
            }}
          {%- endif -%}

          <div class="cards-grid__card-content">
            {%- if block.settings.title != blank -%}
              <h3 class="cards-grid__card-title">{{ block.settings.title }}</h3>
            {%- endif -%}

            {%- if block.settings.textbox != blank -%}
              <div class="cards-grid__card-text">{{ block.settings.textbox }}</div>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Cards Grid",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "title",
          "label": "Title",
          "default": "Card Title"
        },
        {
          "type": "richtext",
          "id": "textbox",
          "label": "Text",
          "default": "<p>Add your card description text here.</p>"
        },
        {
          "type": "image_picker",
          "id": "bg_icon",
          "label": "Background Icon"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Cards Grid",
      "blocks": [
        {
          "type": "card"
        },
        {
          "type": "card"
        },
        {
          "type": "card"
        }
      ]
    }
  ]
}
{% endschema %}
