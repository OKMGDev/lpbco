{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .simple-image__wrapper {
    {%- if section.settings.image_width == 'full' -%}
      width: 100%;
    {%- elsif section.settings.image_width == 'contained' -%}
      max-width: 100%;
      margin: 0 auto;
    {%- elsif section.settings.image_width == 'custom' -%}
      max-width: {{ section.settings.image_custom_width }}px;
      margin: 0 auto;
    {%- endif -%}
    display: flex;
  }

  .simple-image__wrapper img{
    width: 100%;
    height: auto;
  }
{%- endstyle -%}

<div class="simple-image-section section-{{ section.id }}-padding" id="SimpleImage-{{ section.id }}">
  {%- if section.settings.image != blank -%}
    <div class="page-width">
      <div class="simple-image__wrapper">
        {{
          section.settings.image
          | image_url: width: 2000
          | image_tag: loading: 'lazy', alt: section.settings.image.alt
          | default: 'Image'
        }}
      </div>
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Simple Image",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Image Settings"
    },
    {
      "type": "select",
      "id": "image_width",
      "label": "Image width",
      "options": [
        {
          "value": "full",
          "label": "Full width"
        },
        {
          "value": "contained",
          "label": "Contained (auto)"
        },
        {
          "value": "custom",
          "label": "Custom width"
        }
      ],
      "default": "contained"
    },
    {
      "type": "range",
      "id": "image_custom_width",
      "min": 200,
      "max": 2000,
      "step": 50,
      "unit": "px",
      "label": "Custom width",
      "default": 1200,
      "info": "Only applies when 'Custom width' is selected"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Simple Image"
    }
  ]
}
{% endschema %}
