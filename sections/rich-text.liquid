{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  #shopify-section-{{ section.id }} {
    position: relative;
    overflow: hidden;
    {%- if section.settings.accent_color != blank -%}
      --accent-color: {{ section.settings.accent_color }};
    {%- endif -%}
  }
{%- endstyle -%}

<div class="rich-text-section page-width section-{{ section.id }}-padding" id="RichText-{{ section.id }}">
  {%- if section.settings.image_top_left != blank -%}
    <div class="rich-text__image-top-left">
      {{
        section.settings.image_top_left
        | image_url: width: 600
        | image_tag: loading: 'lazy', alt: section.settings.image_top_left.alt
        | default: 'Image'
      }}
    </div>
  {%- endif -%}

  <div class="rich-text__content" style="max-width: {{ section.settings.content_max_width }}px;">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'title' -%}
          <h2 class="rich-text__title rich-text__title--{{ block.settings.title_size }}" {{ block.shopify_attributes }}>
            {{ block.settings.title }}
          </h2>
        {%- when 'subtitle' -%}
          <p class="rich-text__subtitle" {{ block.shopify_attributes }}>
            {{ block.settings.subtitle }}
          </p>
        {%- when 'textbox' -%}
          <div class="rich-text__textbox rte" {{ block.shopify_attributes }}>
            {{ block.settings.textbox }}
          </div>
        {%- when 'button' -%}
          <div class="rich-text__buttons" {{ block.shopify_attributes }}>
            {%- if block.settings.button_label_1 != blank -%}
              <a
                {% if block.settings.button_link_1 == blank %}
                  role="link" aria-disabled="true"
                {% else %}
                  href="{{ block.settings.button_link_1 }}"
                {% endif %}
                class="button button--1"
              >
                {{- block.settings.button_label_1 | escape -}}
              </a>
            {%- endif -%}
            {%- if block.settings.button_label_2 != blank -%}
              <a
                {% if block.settings.button_link_2 == blank %}
                  role="link" aria-disabled="true"
                {% else %}
                  href="{{ block.settings.button_link_2 }}"
                {% endif %}
                class="button button--orange"
              >
                {{- block.settings.button_label_2 | escape -}}
              </a>
            {%- endif -%}
          </div>
        {%- when 'stamp' -%}
          {%- if block.settings.textbox != blank -%}
            <div
              class="rich-text__stamp"
              {{ block.shopify_attributes }}
              style="
                --stamp-color: {{ block.settings.color }};
                left: {{ block.settings.position_left }}%;
                top: {{ block.settings.position_top }}%;
              "
            >
              {{ block.settings.textbox }}
            </div>
          {%- endif -%}
      {%- endcase -%}
    {%- endfor -%}
  </div>

  {%- if section.settings.image_bottom_right != blank -%}
    <div class="rich-text__image-bottom-right">
      {{
        section.settings.image_bottom_right
        | image_url: width: 600
        | image_tag: loading: 'lazy', alt: section.settings.image_bottom_right.alt
        | default: 'Image'
      }}
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Rich Text",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "content_max_width",
      "min": 0,
      "max": 1000,
      "step": 10,
      "unit": "px",
      "label": "Content max width",
      "default": 600
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent color"
    },
    {
      "type": "header",
      "content": "Images"
    },
    {
      "type": "image_picker",
      "id": "image_top_left",
      "label": "Image top left"
    },
    {
      "type": "image_picker",
      "id": "image_bottom_right",
      "label": "Image bottom right"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "title",
      "name": "Title",
      "settings": [
        {
          "type": "html",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "select",
          "id": "title_size",
          "label": "Title size",
          "options": [
            {
              "value": "bigger",
              "label": "Bigger"
            },
            {
              "value": "smaller",
              "label": "Smaller"
            }
          ],
          "default": "bigger"
        }
      ]
    },
    {
      "type": "subtitle",
      "name": "Subtitle",
      "settings": [
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle"
        }
      ]
    },
    {
      "type": "textbox",
      "name": "Textbox",
      "settings": [
        {
          "type": "richtext",
          "id": "textbox",
          "label": "Textbox"
        }
      ]
    },
    {
      "type": "button",
      "name": "Buttons",
      "settings": [
        {
          "type": "header",
          "content": "Button 1"
        },
        {
          "type": "text",
          "id": "button_label_1",
          "label": "Button 1 label"
        },
        {
          "type": "url",
          "id": "button_link_1",
          "label": "Button 1 link"
        },
        {
          "type": "header",
          "content": "Button 2"
        },
        {
          "type": "text",
          "id": "button_label_2",
          "label": "Button 2 label"
        },
        {
          "type": "url",
          "id": "button_link_2",
          "label": "Button 2 link"
        }
      ]
    },
    {
      "type": "stamp",
      "name": "Stamp",
      "settings": [
        {
          "type": "richtext",
          "id": "textbox",
          "label": "Textbox"
        },
        {
          "type": "color",
          "id": "color",
          "label": "Color",
          "default": "#000000"
        },
        {
          "type": "range",
          "id": "position_left",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%",
          "label": "Position left",
          "default": 0
        },
        {
          "type": "range",
          "id": "position_top",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%",
          "label": "Position top",
          "default": 0
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Rich Text",
      "blocks": [
        {
          "type": "title"
        },
        {
          "type": "subtitle"
        },
        {
          "type": "textbox"
        },
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}
